<%= form_for @book do |f| %>
  <%= f.hidden_field :author_id, :value => @author.id %>
  <div class="input-field col s6">
  	<%= f.label :title, 'Title' %>
  	<%= f.text_field :title %>
  </div>
  <div class="input-field col s6">
  	<%= f.label :genre, 'Genre' %>
  	<%= f.text_field :genre %>
  </div>
  <div class="input-field col s6">
  	<%= f.label :publish_date, 'Publish_date' %>
  	<%= f.text_field :publish_date %>
  </div>
  <%= f.submit "Submit", :class => "btn waves-effect waves-light" %>
<% end %>